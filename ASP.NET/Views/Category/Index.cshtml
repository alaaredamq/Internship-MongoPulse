@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="View_Notification"/>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>Category Name</th>
        <th>Date Created</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model) {
        <tr>
            <td width="50%">
                @obj.Name
            </td>
            <td width="50%">
                @obj.CreatedDateTime
            </td>
            <td>
                <div class="w-75 btn-group"role="group">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"> <i class="bi bi-pen"></i> Edit</a>
                    &nbsp;&nbsp;&nbsp;
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"> <i class="bi bi-pen"></i> Delete</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>